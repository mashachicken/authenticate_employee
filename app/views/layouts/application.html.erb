<!DOCTYPE html>
<html>
<head>
  <title>ProjectTracker</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <% if current_user %>
  <%= current_user.email %> | <%= link_to "Sign out", '/signout' %>
  <% else %>
  <%= link_to "Sign up", 'signup' %> | <%= link_to "Sign in", '/signin' %>
  <% end %>

  <header>
    <div>
      <h1><%= link_to 'Employee Tracker', '/' %></h1>
      <nav>
        <%= link_to 'Manage Divisions', divisions_path, class: 'nav-divisions' %>
        <%= link_to 'Manage Projects', projects_path, class: 'nav-projects' %>
      </nav>
    </div>
  </header>
  <% unless (flash[:alert].nil? && flash[:notice].nil?) %>
  <div id='flash'>
    <p class='alert'><%= flash[:alert] %></p>
    <p class='notice'><%= flash[:notice] %></p>
  </div>
  <% end %>
  <main>
    <%= yield %>
  </main>
</body>
</html>
